<div class="content">
    <h2><%= title %></h2>
    <p><strong>Category: </strong><%= category.name %></p>
    <p><strong>Description: </strong><%= category.description %></p>
    <hr>
    <div class="races">
        <h3>Races</h3>
        <% if (category_races.length > 0) { %>
            <ul class="races">
                <% category_races.forEach(function(race) { %>
                    <li>
                        <a href="<%= race.url %>"><%= race.name %></a>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>There are no races in this category.</p>
        <% } %>
    </div>
    <hr>
    <p><a href="<%= category.url %>/delete">Delete category</a></p>
    <hr>
    <p><a href="<%= category.url %>/update">Update category</a></p>
</div>