<div class="content">
    <h2><%= title %></h2>
    <form method="post">
        <div class="form-group">
            <label for="modality">Modality:</label>
            <select
                id="modality"
                name="modality"
                class="form-control"
                required>
                <option value="" disabled>--Please select a modality--</option>
                <% modalities.forEach(function(modality) { %>
                    <option
                        value="<%= modality._id %>"
                        <%= instance && instance.modality._id.toString() === modality._id.toString() ? 'selected' : '' %>>
                        <%= modality.race.name %> - <%= modality.distance %> km
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="date">Date:</label>
            <input
                type="date"
                id="date"
                name="date"
                class="form-control"
                value="<%= instance ? instance.formatted_date : '' %>"
                required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input
                type="number"
                id="price"
                name="price"
                class="form-control"
                value="<%= instance ? instance.price : '' %>"
                required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <% if (errors) { %>
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
</div>