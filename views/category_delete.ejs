<div class="content">
    <h2><%= title %>: <%= category.name %></h2>

    <% if (category_races.length > 0) { %>
        <p><strong>Delete the following races before attempting to delete this category.</strong></p>
        <div class="races">
            <h3>Races</h3>
            <ul>
                <% category_races.forEach(function(race) { %>
                    <li>
                        <a href="<%= race.url %>"><%= race.name %></a>
                    </li>
                <% }) %>
            </ul>
        </div>
    <% } else { %>
        <p><strong>Do you really want to delete this category?</strong></p>
        <form method="post">
            <div class="form-group">
                <input id="categoryid" class="form-control" type="hidden" name="categoryid" value="<%= category._id %>">
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    <% } %>
</div>