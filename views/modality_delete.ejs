<div class="content">
    <h2><%= title %>: <%= modality.race.name %> - <%= modality.distance %> Km</h2>

    <% if (instances.length > 0) { %>
        <p><strong>Delete the following race instances before attempting to delete this modality.</strong></p>
        <div class="instances">
            <h3>Instances</h3>
            <ul>
                <% instances.forEach(function(instance) { %>
                    <li>
                        <a href="<%= instance.url %>"><%= instance.formatted_date %></a>
                    </li>
                <% }) %>
            </ul>
        </div>
    <% } else { %>
        <p><strong>Do you really want to delete this modality?</strong></p>
        <form method="post">
            <div class="form-group">
                <input id="modalityid" class="form-control" type="hidden" name="modalityid" value="<%= modality._id %>">
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    <% } %>
</div>