<div class="content">
    <h2><%= title %></h2>
    <form method="post">
        <div class="form-group">
            <label for="race">Race:</label>
            <select
                id="race"
                name="race"
                class="form-control"
                required>
                <option value="" disabled>--Please select a race--</option>
                <% races.forEach(function(race) { %>
                    <option
                        value="<%= race._id %>"
                        <%= race && race._id.toString() === race._id.toString() ? 'selected' : '' %>>
                        <%= race.name %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="distance">Distance:</label>
            <input
                type="text"
                id="distance"
                name="distance"
                class="form-control"
                value="<%- modality ? modality.distance : '' %>"
                placeholder="Number of kilometers"
                required>
        </div>
        <div class="form-group">
            <label for="elevation">Elevation:</label>
            <input
                type="text"
                id="elevation"
                name="elevation"
                class="form-control"
                value="<%- modality ? modality.elevation : '' %>"
                placeholder="Number of positive meters"
                required>
        </div>
        <div class="form-group">
            <label for="start_location">Start Location:</label>
            <select
                id="start_location"
                name="start_location"
                class="form-control"
                required>
                <option value="" disabled>--Please select a start location--</option>
                <% locations.forEach(function(location) { %>
                    <option
                        value="<%= location._id %>"
                        <%= location && location._id.toString() === location._id.toString() ? 'selected' : '' %>>
                        <%= location.city %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="end_location">End Location:</label>
            <select
                id="end_location"
                name="end_location"
                class="form-control"
                required>
                <option value="" disabled>--Please select a end location--</option>
                <% locations.forEach(function(location) { %>
                    <option
                        value="<%= location._id %>"
                        <%= location && location._id.toString() === location._id.toString() ? 'selected' : '' %>>
                        <%= location.city %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="track">Track XML Code:</label>
            <textarea
                id="track"
                name="track"
                class="form-control"
                placeholder="Paste the XML code of the track"
                required><%= modality ? modality.track : '' %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <% if (errors) { %>
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
</div>